<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlanerSparingów</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SheduleMatchWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PlanerSparingów</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clubs/ShowAllClubs">Wszystkie kluby</a>
                        </li>
                        @if (User.IsInRole("Coach"))
                        {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clubs/BranchClubs/MyBranchClub">Moja drużyna</a>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Clubs/Matches/MatchPlanned">Zaplanowane mecze</a>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Matches/PlanNewMatch">Zaplanuj nowy mecz</a>

                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("President") || User.IsInRole("Coach"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="navbarDropdownAdmin">
                                    Mój klub
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                    <li>
                                        <a class="dropdown-item" href="/clubs/myclub">
                                            Profil klubu
                                        </a>
                                        <a class="dropdown-item" href="/Matches/MyScheduleMatch">
                                            Rozegrane mecze
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }

                        
                    </ul>
                </div>
            </div>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Zaloguj się!</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/Account/Register">Zarejestruj się!</a>
                </div>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <div class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/LogOut">Wyloguj się!</a>
                </div>
            }
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SheduleMatchWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>