@using Domain.Models.VievModel
@{
    var notification = (Notification)ViewData["Notification"];
    if(notification != null)
    {
        var notificationClass = "";
        switch (notification.Type)
        {
            case Domain.Models.Enum.NotificationType.Success:
                notificationClass = "alert-success";
                break;
            case Domain.Models.Enum.NotificationType.Error:
                notificationClass = "alert-secondary";
                break;
            case Domain.Models.Enum.NotificationType.Info:
                notificationClass = "alert-danger";
                break;
            default:
            notificationClass = "";
                break;
        }   

        <div class="container mb-5">
            <div class="alert @notificationClass alert-dismissible fade show mb-5" role="alert">
                @Html.Raw(notification.Message)
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }
}