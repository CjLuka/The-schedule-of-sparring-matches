@page
@model SheduleMatchWeb.Pages.Clubs.AddNewClubModel
@{
}
<div>
    <div class="container">
       <form method="post">
           <div class="mb-3">
               <label for="Nazwa" class="form-label">
                 Podaj nazwę:
               </label>
                <input id="Nazwa" type="text" class="form-control" asp-for="NewClub.Name" />
           </div>
           <div class="mb-3">
                <label for="Data" class="form-label">
                    Podaj Date utworzenia:
                </label>
                <input id="Data" type="date" class="form-control" asp-for="NewClub.CreatedDate" />
           </div>
           <div class="form-group">
                <select asp-for="NewClub.GameClassId" asp-items="@(ViewData["klasyRozgrywkowe"] as IEnumerable<SelectListItem>)"></select> 
                <span asp-validation-for="GameClassess" class="text-danger"></span>
              </div>

           <div>
               <button type="submit" class="btn btn-dark">
                   Dodaj
               </button>
           </div>
       </form>
    </div>
</div>