@page
@model SheduleMatchWeb.Pages.Clubs.Coach.MyClubModel
@{
}


<!DOCTYPE html>
<html lang="pl">
<head>
    <title>Mój Klub</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
        }

        .club-container {
            max-width: 800px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            padding: 20px;
        }

        .club-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .club-header h1 {
                font-size: 36px;
                color: #333;
                margin-bottom: 10px;
            }

            .club-header img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
            }

        .club-details h2 {
            font-size: 24px;
            color: #333;
            margin-top: 20px;
        }

        .club-details p {
            font-size: 18px;
            color: #555;
        }

        .button-container {
            text-align: center;
            margin-top: 30px;
        }

        
    </style>
</head>
<body>
    <div class="container club-container">
        <div class="club-header">
            <h1>@Model.Club.Club.Name</h1>
            <img src="@Model.Club.Club.FeaturedImageUrl" alt="Obrazek klubu" />
        </div>
        <div class="row">
            <div class="col-md-6">
                <h2>Data Powstania Klubu:</h2>
                <p>@Model.Club.Club.DateCreated</p>
            </div>
            <div class="col-md-6">
                <h2>Prezes</h2>
                <p>@Model.EmailPresident</p>
            </div>
        </div>
    </div>
</body>
</html>