@page "{id:int}"
@using Domain.Models.Enum
@model SheduleMatchWeb.Pages.Clubs.President.UpdateBranchModel

<div>
    <div class="container">
        <h1 class="text-center">Aktualizacja zespołu</h1>
    </div>
</div>

@{
    var messageValidation = (string)ViewData["MessageValidation"];
}

@if (!string.IsNullOrWhiteSpace(messageValidation))
{
    <div class="container mb-5">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(messageValidation)
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="container mt-3">
    <form method="post">
        <div class="mb-3">
            <label for="Id" class="form-label">Nazwa klubu</label>
            <input type="text" class="form-control" id="id" asp-for="BranchClub.Club.Name" readonly>
        </div>

        <div class="form-group">
            <label asp-for="BranchClub.Type" class="control-label">Typ zespołu</label>
            <select asp-for="BranchClub.Type" asp-items="@Html.GetEnumSelectList<BranchType>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="UserId" class="form-label">Trener</label>
            <select class="form-select" aria-label="Default select example" asp-for="BranchClub.UserId" asp-items="@(ViewData["Coaches"] as IEnumerable<SelectListItem>)"></select>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <button class="btn btn-primary" type="submit" asp-page-handler="Update">Aktualizuj</button>
            <button class="btn btn-danger" type="submit" asp-page-handler="Delete">Usuń</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
}
