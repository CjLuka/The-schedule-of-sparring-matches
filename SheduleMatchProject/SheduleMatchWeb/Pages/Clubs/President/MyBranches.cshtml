@page
@using Domain.Models.VievModel;
@model SheduleMatchWeb.Pages.Clubs.President.MyBranchesModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wszystkie oddziały w klubie</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/siteShow.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            color: #007bff;
        }

        tbody tr:hover {
            background-color: #f2f2f2;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>
    @if (Model.BranchClubs.Count == 0)
    {
        var model = new NoAvaliableData
                {
                    MessageTitle = "zespołów",
                    MessageContent1 = "Aktualnie nie posiadasz żadnego oddziału w klubie. Aby dodać nowy zespół przejdź do odpowiedniego formularza z dodaniem zespołu."
                };
        @Html.Partial("_NoAvaliableData", model)
    }
    else
    {
        <div class="container mt-5">
            <h1 class="text-center mb-4">Wszystkie oddziały w klubie</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Klub Id</th>
                        <th>Typ</th>
                        <th>Trener</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BranchClubs)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Club.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@(item.User.FirstName + " " + item.User.LastName)</td>
                            <td>
                                <a href="./UpdateBranch/@item.Id" class="btn btn-primary">Aktualizuj</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>