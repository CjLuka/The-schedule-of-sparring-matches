@page
@model SheduleMatchWeb.Pages.Clubs.ShowAllClubsModel
@{
}
<h1>Wszystkie Kluby</h1>
<form method="post">
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Clubs[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clubs[0].DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clubs[0].GameClass)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Clubs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GameClass)
                    </td>
                    <td><a href="./UpdateClub/@item.Id">View</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-page="./AddNewClub">Dodaj nowy klub</a>
</form>
