@page
@model SheduleMatchWeb.Pages.CalendarModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Your Calendar Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        .aktualny {
            font-weight: bold;
            color: blue;
        }

        .navigation {
            text-align: center;
            margin-top: 10px;
        }

        .navigation button {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            margin: 5px;
            border: none;
            cursor: pointer;
        }

        .navigation button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>@Model.NazwaMiesiaca @Model.Rok</h1>

    <div class="navigation">
        <form method="post">
            <button type="submit" name="action" value="PreviousMonth">Previous Month</button>
            <button type="submit" name="action" value="NextMonth">Next Month</button>
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>Pon</th>
                <th>Wt</th>
                <th>Śr</th>
                <th>Czw</th>
                <th>Pt</th>
                <th>Sob</th>
                <th>Nd</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @for (int i = 0; i < 42; i++)
                {
                    DateTime date = Model.StartDate.AddDays(i);
                    if (i % 7 == 0 && i > 0)
                    {
                        @:</tr><tr> <!-- rozpocznij nowy wiersz co 7 dni -->
                    }

                    if (date.Month == Model.PierwszyDzienMiesiaca.Month)
                    {
                        <td class="aktualny">@date.Day</td>
                    }
                    else
                    {
                        <td>@date.Day</td>
                    }
                }
            </tr>
        </tbody>
    </table>
</body>
</html>