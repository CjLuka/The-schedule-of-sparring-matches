@page
@using Domain.Models.VievModel;
@model SheduleMatchWeb.Pages.AllBranchesModel

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wszystkie Zespoły</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/siteShow.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h1 {
            color: #007bff;
        }

        th {
            background-color: #007bff;
            color: #ffffff;
        }

        tbody tr:hover {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    @if (Model.Branches.Items.Count == 0)
    {
        var model = new NoAvaliableData
                {
                    MessageTitle = "zespołów",
                    MessageContent1 = "Przepraszamy, ale aktualnie nie posiadamy żadnych zespołów w bazie danych."
                };
        @Html.Partial("_NoAvaliableData", model)
    }
    else
    {
        <div class="container">
            <h1>Wszystkie Zespoły</h1>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nazwa</th>
                            <th>Typ drużyny</th>
                            <th>Trener</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Branches.Items)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Club.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                                <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav aria-label="...">
                <ul class="pagination justify-content-end">
                    @if (Model.Pagination.Page != 1)
                    {
                        <li class="page-item disabled">
                            <a class="nav-link text-dark"
                               asp-page="/AllBranches"
                               asp-route-side="1"
                               asp-route-size="@Model.Pagination.Size"
                               asp-area="">
                                Pierwsza
                            </a>
                        </li>
                    }
                    @if (Model.Pagination.Page > 2)
                    {
                        <li class="page-item disabled">
                            <a class="nav-link text-dark"
                               asp-page="/AllBranches"
                               asp-route-side="@(Model.Pagination.Page - 1)"
                               asp-route-size="@Model.Pagination.Size"
                               asp-area="">
                                @(Model.Pagination.Page - 1)
                            </a>
                        </li>
                    }

                    <li class="page-item active">
                        <a class="page-link" href="#">@Model.Pagination.Page <span class="sr-only">(current)</span></a>
                    </li>
                    @if (Model.Pagination.Page < (Model.Branches.PaginationInfo.PagesCount - 1))
                    {
                        <li class="page-item">
                            <a class="nav-link text-dark"
                               asp-page="/AllBranches"
                               asp-route-side="@(Model.Pagination.Page + 1)"
                               asp-route-size="@Model.Pagination.Size"
                               asp-area="">
                                @(Model.Pagination.Page + 1)
                            </a>
                        </li>
                    }
                    @if (Model.Pagination.Page < Model.Branches.PaginationInfo.PagesCount)
                    {
                        <li class="page-item">
                            <a class="nav-link text-dark"
                               asp-page="/AllBranches"
                               asp-route-side="@(Model.Branches.PaginationInfo.PagesCount)"
                               asp-route-size="@Model.Pagination.Size"
                               asp-area="">
                                Ostatnia
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
